<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/rsb_padding_large"
        android:orientation="vertical">

        <TextView
            android:id="@+id/migration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingBottom="16dp"/>

        <ProgressBar
            android:id="@+id/migration_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

    </LinearLayout>

    <com.healthymedium.arc.ui.Button
        android:id="@+id/migration_try_again_button"
        android:visibility="gone"
        android:text="@string/try_again"
        app:allCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        app:buttonTheme="light"/>

    <com.healthymedium.arc.ui.Button
        android:id="@+id/migration_contact_us_button"
        android:visibility="gone"
        android:text="@string/resources_contact"
        app:allCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/migration_try_again_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:buttonTheme="light"/>

</RelativeLayout>
