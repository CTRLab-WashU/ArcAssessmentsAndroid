<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/primaryDark"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_x_to_close"/>

        <FrameLayout
            android:id="@+id/progressBarGradient"
            android:layout_width="50dp"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tutorial_progress_bar_gradient">
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textviewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_centerHorizontal="false"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="$1.51"
        android:textAllCaps="false"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textviewFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textviewPrice"
        android:layout_centerHorizontal="false"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="pinzas para la ropa"
        android:textAllCaps="false"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/price_test_isgood"
        android:textSize="26dp" />

    <com.healthymedium.arc.custom.RadioButton
        android:id="@+id/radioButtonNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonYes"
        android:layout_alignParentStart="true" />

    <com.healthymedium.arc.custom.RadioButton
        android:id="@+id/radioButtonYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12" />

    <FrameLayout
        android:id="@+id/frameHide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fullScreenGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progressBar"
        android:background="#404040"
        android:alpha="0.9"
        android:visibility="gone">

    </FrameLayout>

    <com.healthymedium.arc.custom.DialogButtonTutorial
        android:id="@+id/bottomPopup"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <com.healthymedium.arc.custom.DialogButtonTutorial
        android:id="@+id/centerPopup"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_checkmark_blue"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textViewComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkmark"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:paddingTop="21dp"
        android:text="Tutorial Complete"
        android:textColor="@color/primaryDark"
        android:textSize="26dp"
        android:textAlignment="center"
        android:visibility="gone"
        />

    <com.healthymedium.arc.custom.Button
        android:id="@+id/endButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="24dp"
        app:enabled="true"
        app:text="CLOSE"
        android:visibility="gone"
        />


</RelativeLayout>
