<?xml version="1.0" encoding="utf-8"?>
<com.healthymedium.arc.ui.base.RoundedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:fillColor="@color/white"
    app:radiusBottomLeft="4dp"
    app:radiusBottomRight="4dp"
    app:radiusTopLeft="4dp"
    app:radiusTopRight="4dp">

    <com.healthymedium.arc.ui.base.RoundedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:fillColor="@color/accent"
        app:radiusBottomLeft="0dp"
        app:radiusBottomRight="0dp"
        app:radiusTopLeft="4dp"
        app:radiusTopRight="4dp">

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/secondaryDark"
            android:textSize="20dp"
            tools:text="4 Out Of 4" />

        <com.healthymedium.arc.ui.base.RoundedFrameLayout
            android:id="@+id/frameLayoutDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fillColor="@color/hintDark"
            app:radius="4dp"
            tools:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:text="Done!"
                android:textColor="@color/secondaryDark"
                android:textSize="16dp" />

        </com.healthymedium.arc.ui.base.RoundedFrameLayout>


    </com.healthymedium.arc.ui.base.RoundedLinearLayout>

    <com.healthymedium.arc.ui.base.RoundedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:fillColor="@color/white"
        app:radiusBottomLeft="4dp"
        app:radiusBottomRight="4dp"
        app:radiusTopLeft="0dp"
        app:radiusTopRight="0dp">

        <TextView
            android:id="@+id/textViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/secondaryDark"
            android:textSize="17dp"
            tools:text="Complete all 4 test sessions for the day to earn $1.00." />

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"/>

        <com.healthymedium.arc.ui.earnings.EarningsBonusView
            android:id="@+id/bonusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

    </com.healthymedium.arc.ui.base.RoundedLinearLayout>

</com.healthymedium.arc.ui.base.RoundedLinearLayout>

