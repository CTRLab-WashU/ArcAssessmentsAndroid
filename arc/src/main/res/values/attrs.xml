<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text" format="string" />
    <attr name="enabled" format="boolean" />

    <attr name="fillColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="strokeColor" format="color" />
    <attr name="dashLength" format="dimension" />
    <attr name="dashSpacing" format="dimension" />

    <attr name="radius" format="dimension" />
    <attr name="radiusTopLeft" format="dimension" />
    <attr name="radiusTopRight" format="dimension" />
    <attr name="radiusBottomLeft" format="dimension" />
    <attr name="radiusBottomRight" format="dimension" />

    <attr name="gradientColor0" format="color" />
    <attr name="gradientColor1" format="color" />
    <attr name="gradient" format="enum" >
        <enum name="linearHorizontal" value="0"/>
        <enum name="linearVertical" value="1"/>
    </attr>

    <declare-styleable name="FancyButton">
        <attr name="rounded" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Question">
        <attr name="text"/>
        <attr name="button_text" format="string" />
    </declare-styleable>

    <declare-styleable name="Rating">
        <attr name="text_low" format="string" />
        <attr name="text_high" format="string" />
    </declare-styleable>

    <declare-styleable name="Button">
        <attr name="text"/>
        <attr name="enabled"/>
        <attr name="inverted" format="boolean" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="WeekdayButton">
        <attr name="text"/>
    </declare-styleable>

    <declare-styleable name="RoundedFrameLayout">
        <attr name="fillColor" />
        <attr name="strokeWidth" />
        <attr name="strokeColor" />
        <attr name="dashLength" />
        <attr name="dashSpacing" />
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
        <attr name="gradientColor0" />
        <attr name="gradientColor1" />
        <attr name="gradient" />
    </declare-styleable>

    <declare-styleable name="RoundedLinearLayout">
        <attr name="fillColor" />
        <attr name="strokeWidth" />
        <attr name="strokeColor" />
        <attr name="dashLength" />
        <attr name="dashSpacing" />
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
        <attr name="gradientColor0" />
        <attr name="gradientColor1" />
        <attr name="gradient" />
    </declare-styleable>

    <declare-styleable name="RoundedRelativeLayout">
        <attr name="fillColor" />
        <attr name="strokeWidth" />
        <attr name="strokeColor" />
        <attr name="dashLength" />
        <attr name="dashSpacing" />
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
        <attr name="gradientColor0" />
        <attr name="gradientColor1" />
        <attr name="gradient" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="baseColor" format="color" />
        <attr name="sweepColor" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="checkmarkColor" format="color" />
        <attr name="strokeWidth" />
    </declare-styleable>


</resources>
